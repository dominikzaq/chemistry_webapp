{% extends 'base.html.twig' %}

{% block title %}Hello AtomController!{% endblock %}

{% block body %}
    {% for i in url_images %}
        <tr>
            <form action="{{ path("image_delete", { "id": i.id_image }) }}">
                <img src="{{asset(i.url_image) }}" class="img-fluid" width="200" height="200">
                <input type="submit" value="Delete">
            </form>
        </tr>
    {% endfor %}
    <h1>Edit Atom</h1>
    {{ form(form) }}
{% endblock %}
